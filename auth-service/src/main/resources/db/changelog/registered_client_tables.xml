<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

    <!-- Based on org/springframework/security/oauth2/server/authorization/client/oauth2-registered-client-schema.sql -->
    <changeSet id="6-create-oauth2-registered-client" author="junie">
        <createTable tableName="oauth2_registered_client" schemaName="security">
            <column name="id" type="varchar(100)">
                <constraints primaryKey="true" primaryKeyName="pk_oauth2_registered_client" nullable="false"/>
            </column>
            <column name="client_id" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="client_id_issued_at" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="client_secret" type="varchar(200)"/>
            <column name="client_secret_expires_at" type="timestamp"/>
            <column name="client_name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="client_authentication_methods" type="varchar(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="authorization_grant_types" type="varchar(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="redirect_uris" type="varchar(1000)"/>
            <column name="post_logout_redirect_uris" type="varchar(1000)"/>
            <column name="scopes" type="varchar(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="client_settings" type="varchar(2000)">
                <constraints nullable="false"/>
            </column>
            <column name="token_settings" type="varchar(2000)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="oauth2_registered_client"
                             schemaName="security"
                             columnNames="client_id"
                             constraintName="ux_oauth2_registered_client_client_id"/>
        <createIndex tableName="oauth2_registered_client" schemaName="security" indexName="idx_orc_client_id">
            <column name="client_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
